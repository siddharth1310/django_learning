{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FASTAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8001",
        "--reload",
        "--reload-include=*.py"
      ],
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Django: Run Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "8000"
      ],
      "django": true,
      "justMyCode": true,
      "console": "integratedTerminal"
    }
  ]
}